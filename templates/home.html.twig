{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Nos produits phares</h1>

    <div class="row">
        {% for product in products %}
            <div class="col">
                <div class="card">
                    <img src="{{ product.mainPicture }}"  class="img-fluid" alt="produit">
                    <div class="card-body">
                        <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }})</h4>
                        <span class="badge badge-secondary">{{ product.category.name }}</span><br><br>
                        <p class="card-text">{{ product.shortDescription }}</p>
                        <a href="{{ path('product_show', {'category_slug': product.category.slug, 'slug': product.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
                        <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <hr>
