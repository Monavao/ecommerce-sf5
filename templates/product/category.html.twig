{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ slug }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Accueil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>

    <h1 class="mb-4">Catégorie : {{ category.name }}</h1>
    <div class="row">
        {% for product in category.products %}
            <div class="col-3 d-flex align-items-stretch my-1">
                <div class="card">
                    <img src="{{ product.mainPicture }}"  class="img-fluid" alt="produit">
                    <div class="card-body">
                        <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }})</h4>
                        <span class="badge badge-secondary">{{ product.category.name }}</span><br><br>
                        <p class="card-text">{{ product.shortDescription }}</p>
                        <a href="#" class="btn btn-primary btn-sm">Détails</a>
                        <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
